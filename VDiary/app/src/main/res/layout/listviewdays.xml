<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="#ffffff">

    <TextView
        android:layout_width="10dp"
        android:layout_height="70dp"
        android:background="#068f0f"
        android:id="@+id/colorbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/smiley"
        tools:ignore="UnknownIdInLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/teachrnm"
        android:layout_below="@+id/subjectnamedays"
        android:layout_toEndOf="@+id/colorbar"
        android:textSize="19dp"
        android:layout_marginLeft="5dp"
        android:background="#ffffff"
        android:textColor="#939292" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/subjectnamedays"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/colorbar"
        android:textSize="17dp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="5dp"
        android:background="#ffffff"
        android:maxWidth="300dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/attendancepercentage"
        android:textSize="19dp"
        android:background="#ffffff"
        android:textColor="#939292"
        android:layout_above="@+id/teachrnm"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>